extends ../layouts/default

block variables
  - const title = "Pastel Главная Страница"
  - const description = "Pastel - Сервис организации романитических услуг, девичников и пикников."

block content
  div(class="home")
    div(class="container")
      div(class="home__wrapper")
      main(class="home__section active")
        h1(class="title home__title")
          a(class="home__link" href="/")
            span() Пастель.
        div(class="home__imgs")
          div(class="home__imgs-container")
            div(class="home__img-container home__img-container--first")
              img(class="home__img home__img--first" src="../assets/img/home/1.jpg" alt="flowers")
        div(class="home__text")
          p(class="home__descr home__descr--quote") 
            span() "В наш деловой век нужно уметь быть романтиком." 
            <br />
            span() Эрих Мария Ремарк
          p(class="home__descr home__descr--about") Сервис организации романитических услуг и пикников.
      section(class="home__section")
        h2(class="title home__title")
          a(class="home__link" href="./date.html") 
            span() Свидание
        div(class="home__imgs")
          div(class="home__imgs-container")
            div(class="home__img-container home__img-container--first")
              img(class="home__img" src="../assets/img/date/date.jpg" alt="picnic")
      section(class="home__section")
        h2(class="title home__title")
          a(class="home__link" href="./relax.html") 
            span() Релакс
        div(class="home__imgs")
          div(class="home__imgs-container")
            div(class="home__img-container home__img-container--first")
              img(class="home__img home__img--first" src="../assets/img/relax/relax2.jpg" alt="relax")
      section(class="home__section")
        h2(class="title home__title")
          a(class="home__link" href="./breakfast.html") 
            span() I-Завтрак
        div(class="home__imgs")
          div(class="home__imgs-container")
            div(class="home__img-container home__img-container--first")
              img(class="home__img home__img--first" src="../assets/img/breakfast/breakfast.jpg" alt="breakfast")
      section(class="home__section")
        h2(class="title home__title")
          a(class="home__link" href="./hen-party.html") 
            span() Девичник
        div(class="home__imgs")
          div(class="home__imgs-container")
            div(class="home__img-container home__img-container--first")
              img(class="home__img home__img--first" src="../assets/img/hen-party/hen-party.jpg" alt="hen-party")