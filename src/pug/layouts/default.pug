include ../utils/mixins

block variables

doctype html
html(lang="ru")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title #{title}
    meta(name='description' content=description)
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body(class=["body-fixed"] class=bodyClass data-theme=theme)
    include ../blocks/preloader/preloader
    +header(navColor)
    .content
      block content
    +footer(navColor)